{namespace ff.fisher.ui.admin.soy}

/**
 * HTML for creating/editing a fish.  Admin only.
 * @param ids
 */
{template .ADMIN_FISH_DIALOG}
  <div class="{css ff-table}{sp}{css ff-new-fish-dialog}">
    <div class="{css ff-row}">
      <div class="{css ff-cell}">
        Name:
      </div>
      <input type="text" id="{$ids.NAME_INPUT|id}"
          class="{css ff-fish-name-input}" />
    </div>
    <div class="{css ff-row}">
      <div class="{css ff-cell}">
        Start Hour:
      </div>
      <input type="text" id="{$ids.START_HOUR_INPUT|id}"
          class="{css ff-fish-start-hour-input}" />
    </div>
    <div class="{css ff-row}">
      <div class="{css ff-cell}">
        End Hour:
      </div>
      <input type="text" id="{$ids.END_HOUR_INPUT|id}"
          class="{css ff-fish-end-hour-input}" />
    </div>
    <div class="{css ff-row}">
      <div class="{css ff-cell}">
        Weather:
      </div>
      <input type="text" id="{$ids.WEATHER_INPUT|id}"
          class="{css ff-fish-weather-input}" />
    </div>
    <div class="{css ff-row}">
      <div class="{css ff-cell}">
        Location:
      </div>
      <input type="text" id="{$ids.LOCATION_INPUT|id}"
          class="{css ff-fish-location-input}" />
    </div>
  </div>
{/template}